<Window x:Class="TranNgocKhietWPF.BookingReservationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking Reservation"
        Height="380" Width="420"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5"
        FontFamily="Segoe UI">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top">
            <TextBlock Text="Booking Date (yyyy-MM-dd)"
                       FontWeight="SemiBold"
                       Margin="0,0,0,2"/>
            <TextBox x:Name="txtBookingDate"
                     IsEnabled="False"
                     Height="30"
                     Background="#FFFFFF"
                     BorderBrush="#CCC"
                     Padding="5"/>

            <TextBlock Text="Total Price"
                       FontWeight="SemiBold"
                       Margin="0,10,0,2"/>
            <TextBox x:Name="txtTotalPrice"
                     IsEnabled="False"
                     Height="30"
                     Background="#FFFFFF"
                     BorderBrush="#CCC"
                     Padding="5"/>

            <TextBlock Text="Customer ID"
                       FontWeight="SemiBold"
                       Margin="0,10,0,2"/>
            <TextBox x:Name="txtCustomerID"
                     IsEnabled="False"
                     Height="30"
                     Background="#FFFFFF"
                     BorderBrush="#CCC"
                     Padding="5"/>

            <TextBlock Text="Booking Status"
                       FontWeight="SemiBold"
                       Margin="0,10,0,2"/>
            <ComboBox x:Name="cbStatus"
                      Height="30"
                      Background="White"
                      BorderBrush="#CCC"
                      SelectedIndex="0">
                <ComboBoxItem Content="Pending" Tag="0" />
                <ComboBoxItem Content="Confirmed" Tag="1" />
                <ComboBoxItem Content="Cancelled" Tag="2" />
            </ComboBox>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0">
                <Button Content="OK"
                        Width="80"
                        Height="30"
                        Background="#0c37ca"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#668dee"
                        Click="Ok_Click"
                        Cursor="Hand"/>

                <Button Content="Cancel"
                        Width="80"
                        Height="30"
                        Background="#e70808"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderBrush="#e5646a"
                        Click="Cancel_Click"
                        Cursor="Hand"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
